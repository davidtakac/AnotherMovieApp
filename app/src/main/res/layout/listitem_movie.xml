<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="171dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_listitem_moviecover"

        android:layout_width="92dp"
        android:layout_height="139dp"
        android:layout_marginStart="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    
    <TextView
        android:id="@+id/imageview_listitem_movietitle"

        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black"

        app:layout_constraintLeft_toRightOf="@id/imageview_listitem_moviecover"
        app:layout_constraintTop_toTopOf="@id/imageview_listitem_moviecover"
        />

    <TextView
        android:id="@+id/textview_listitem_moviedesc"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:textSize="14sp"
        android:ellipsize="end"
        android:lines="6"

        app:layout_constraintLeft_toRightOf="@id/imageview_listitem_moviecover"
        app:layout_constraintTop_toBottomOf="@id/imageview_listitem_movietitle"
        />

</android.support.constraint.ConstraintLayout>